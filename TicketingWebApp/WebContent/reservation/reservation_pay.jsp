<%@page import="myUtil.HanConv"%>
<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%
	String select_seat = request.getParameter("seat");
	String p_code = request.getParameter("p_code");
	String p_price = request.getParameter("p_price");
	String member_id = (String)session.getAttribute("member_id");
%>
<!DOCTYPE html>
<html>
<head>
	<meta charset="EUC-KR">
	<title>Insert title here</title>
	<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.min.js" ></script>
	<script type="text/javascript" src="https://cdn.iamport.kr/js/iamport.payment-1.1.5.js"></script>
</head>
<body>
	<script>
    $(function(){
        var IMP = window.IMP; // 생략가능
        IMP.init('imp77720351'); // 가입 시 부여받은 "가맹점 식별코드"를 사용
        var msg;
        
        IMP.request_pay({
            pg : 'html5_inicis', // pg사
            pay_method : 'card',
            merchant_uid : 'merchant_' + new Date().getTime(),
            name : 'TICKETING',
            amount : <%= p_price %>,
            buyer_name : '<%= member_id %>',
            // buyer_email : 'member_email',
        }, function(rsp) {
            if ( rsp.success ) {
                // [1] 서버단에서 결제정보 조회를 위해 jQuery ajax로 imp_uid 전달
                jQuery.ajax({
                    url: "/payments/complete", //cross-domain error가 발생하지 않도록 주의
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        imp_uid : rsp.imp_uid
                        //기타 필요한 데이터가 있으면 추가 전달
                    }
                }).done(function(data) {
                    // [2] 서버에서 REST API로 결제정보확인 및 서비스루틴이 정상적인 경우
                    if ( everythings_fine ) {
                        msg = '결제가 완료되었습니다.';
                        msg += '\n고유ID : ' + rsp.imp_uid;
                        msg += '\n상점 거래ID : ' + rsp.merchant_uid;
                        msg += '\결제 금액 : ' + rsp.paid_amount;
                        msg += '카드 승인번호 : ' + rsp.apply_num;
                        
                        alert(msg);
                    } else {
                        // [3] 아직 제대로 결제가 되지 않았습니다.
                        // [4] 결제된 금액이 요청한 금액과 달라 결제를 자동취소처리하였습니다.
                    }
                });
                // 결제 성공 시 reservation 테이블에 예매 정보 저장 
               location.href='../reservation/reservation_success.jsp?p_code=<%= p_code %>&select_seat=<%= select_seat %>&msg='+msg;
            } else {
                msg = '결제에 실패하였습니다.';
                msg += '에러내용 : ' + rsp.error_msg;
                // 결제 실패 시 공연 페이지로 이동
                location.href="../performance/performance_Detail.jsp?p_code=<%= p_code %>";
                alert(msg);
            }
        });
    });
    </script> 
</body>
</html>